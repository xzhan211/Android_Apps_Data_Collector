<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALL TEMPERATURE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stopUpdate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="stopUpdate"
            android:text="STOP UPDATE"
            android:textAlignment="center" />

        <Button
            android:id="@+id/startUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startUpdate"
            android:text="START UPDATE" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewTemperature"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </ListView>

</LinearLayout>